                                                                    # Круглая синяя кнопка
<RoundedButton@Button>
	size_hint: (0.5, 0.1)                                           # Размер кнопки
	background_color: (0,0,0,0)
	background_normal: ''
	canvas.before:
		Color:
			rgba: (48/255, 85/255, 150/255, 1)                      # Цвет кнопки
		RoundedRectangle:
			size: self.size
			pos: self.pos
			radius: [20]                                            # Радиус скругления краёв