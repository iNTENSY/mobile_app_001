WindowManager:
    FirstWindow:                                                    # Первое окно
    SecondWindow:                                                   # Второе окно
	ThirdWindow:                                                    # Третье окно


<FirstWindow>:
    name: "first"                                                   # id окна
	BoxLayout:
        orientation: "vertical"                                     # Вертикальная ориентация
		padding: 50                                                 # Отступ от края
		spacing: 20                                                 # Отступ между объектами
		Image:                                                      # Эксклюзивный стикер
			pos_hint: {'center_x':0.5, 'top':1}
			source: 'welcome_sticker.png'
			size_hint: (0.6, 0.6)                                   # Размер виджета
		Label:                                                      # Приветственная фраза
			text: "		Привет, я - Ди\nТвой мини-помощник"
			font_size: 20                                           # Размер текста
			font_name: 'shrift.ttf'                                 # Шрифт Courier New
			pos_hint: {'center_x':0.5, 'top': 1}                    # Расположение на экране
	BoxLayout:
		padding: 10                                                 # Отступ от края
		spacing: 20                                                 # Отступ между объектами
		RoundedButton:                                              # Кастомная кнопка
			pos_hint: {'center_x': 0.5, 'center_y': 0.1}
			text: "Транспорт"
			font_size: 20
			on_release: 
				root.manager.transition.direction = "right"         # Направление переключения экрана
				root.manager.transition.duration = 1                # Время переключения между экранами
				app.root.current = "second"                         # Изменение экрана по ID экрана
		RoundedButton:
			pos_hint: {'center_x': 0.5, 'center_y': 0.1}
			text: "Сайты"
			font_size: 20                                           # Размер текста
			on_release: 
				root.manager.transition.direction = "left"          # Направление переключения экрана
				root.manager.transition.duration = 1                # Время переключения между экранами
				app.root.current = "third"                          # Изменение экрана по ID экрана
	
<SecondWindow>:
	name: "second"                                                  # id окна
	BoxLayout:
        orientation: "vertical"                                     # Вертикальная ориентация
		BoxLayout:
            Label:
                bold: True                                          # Жирный текст
                font_name: 'shrift.ttf'                             # Шрифт Courier New
                font_size: 30                                       # Размер текста
                text: "Транспорт"
                pos_hint: {'center_x':0.5, 'center_y': 0.5}         # Расположение на экране
                size_hint: (0.1, 0.1)                               # Размер виджета
        BoxLayout:                                                  # Информационное окно состоящее ...
            orientation: "vertical"                                 # ... из большого числа  Label с ...
            BoxLayout:                                              # ... обговоренными точками (остановками) ...
                Label:                                              # ... и номерами транспорта
                    font_name: 'shrift.ttf'
                    font_size: 15
                    text: "Голубая бухта - Омега, Юмашева\n(И в обратную сторону):"
                    color: '#FFBD88'
                    pos_hint: {'x': 1,'y': 1}
                    size_hint: (0.1, 0.01)
                Label:
                    font_name: 'shrift.ttf'
                    font_size: 20
                    text: "77, 105"
                    size_hint: (0.028, 0.01)
                    pos_hint: {'left': 1,'top': 1}
            BoxLayout:
                Label:
                    font_name: 'shrift.ttf'
                    font_size: 15
                    text: "Голубая бухта - Нахимова\n(Нахимова - Голубая бухта):"
                    color: '#FFBD88'
                    pos_hint: {'x': 1,'y': 1}
                    size_hint: (0.1, 0.01)
                Label:
                    font_name: 'shrift.ttf'
                    font_size: 20
                    text: "77"
                    size_hint: (0.048, 0.01)
                    pos_hint: {'left': 1,'top': 1}
            BoxLayout:
                Label:
                    font_name: 'shrift.ttf'
                    font_size: 15
                    text: "Юмашева - Омега\n(Омега - Юмашева):"
                    color: '#FFBD88'
                    pos_hint: {'x': 1,'y': 1}
                    size_hint: (0.1, 0.01)
                Label:
                    font_name: 'shrift.ttf'
                    font_size: 15
                    text: "             Едет всё\n           (Кроме 30)"
                    size_hint: (0.1, 0.01)
                    pos_hint: {'left': 1,'top': 1}
            BoxLayout:
                Label:
                    font_name: 'shrift.ttf'
                    font_size: 15
                    text: "Омега, Юмашева - Доброцен\n(И в обратную сторону):"
                    color: '#FFBD88'
                    pos_hint: {'x': 1,'y': 1}
                    size_hint: (0.1, 0.01)
                Label:
                    font_name: 'shrift.ttf'
                    font_size: 20
                    text: "14, 19"
                    size_hint: (0.048, 0.01)
                    pos_hint: {'left': 1,'top': 1}
        BoxLayout:
	BoxLayout:
		padding: 10
		spacing: 20
		RoundedButton:
			pos_hint: {'center_x': 0.5, 'center_y': 0.1}
			text: "Главный экран"
			font_size: 20
			on_release: 
				root.manager.transition.direction = "up"            # Направление переключения экрана
				root.manager.transition.duration = 1                # Время переключения между экранами
				app.root.current = "first"                          # Изменение экрана по ID экрана
		RoundedButton:
			pos_hint: {'center_x': 0.5, 'center_y': 0.1}
			text: "Сайты"
			font_size: 20
			on_release: 
				root.manager.transition.direction = "left"          # Направление переключения экрана
				root.manager.transition.duration = 1                # Время переключения между экранами
				app.root.current = "third"                          # Изменение экрана по ID экрана
			
